// Se creará una aplicación para hallar la aceleración
//de un vehículo. Teniendo en cuenta que la formula para hallar la aceleración es:
//a = (velocidad final − velocidad inicial)/tiempo


//Librerías

#include <stdio.h>
#include <iostream> //Nos da entradas y salidas de datos
#include <conio.h>
#include <stdlib.h>

//Determinando las variables

float aceleracion (float vf, float vi, float t);

//Determinamos la función

main()

{

// Ejecución

float vf=0, vi=0, t, Resultado;
printf("Calculando la aceleración de un auto: \n");

printf("Ingresa la velocidad final: \n");
scanf("%f",&vf);                        //The scanf() function reads the data from stdin and stores the values into the respective variables.

printf("Ingresa la velocidad inicial: \n");
scanf("%f",&vi); 


printf("Ingresa el tiempo: \n");
scanf("%f",&t);

Resultado = aceleracion(vf,vi,t);


getch();
return 0;

}

//Implementacion

float aceleracion (float vf, float vi, float t)
{
    float Resultado;
    Resultado= (vf-vi)/t;
    printf("El resultado es %f:\n", Resultado);
    return Resultado;


}


